@model NaturalLanguage.Models.CalculatorViewModel

@{
    ViewData["Title"] = "Language Calculator";
}


<h4> Welcome To The Natural Calculator App</h4>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expression" class="control-label"></label>
                <input asp-for="Expression" class="form-control" placeholder="Enter expression"/>
                <span asp-validation-for="Expression" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Calculate" class="btn btn-primary" />
            </div>
            <br />

            <h4> @ViewBag.Message</h4>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
